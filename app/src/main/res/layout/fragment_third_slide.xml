                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewMessageDelete3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/pineapple_definitely_goes_on_pizza"
                        android:textColor="@color/text_description_color2"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/textViewUserName3"
                        app:layout_constraintTop_toBottomOf="@+id/textViewUserName3" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageViewUser3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_chat_user" />

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
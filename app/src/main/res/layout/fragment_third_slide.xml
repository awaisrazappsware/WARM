                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewChat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/chat"
                        android:textColor="@color/whatsapp_color"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewWhatAppLogo3"
                        app:layout_constraintStart_toEndOf="@+id/imageViewWhatAppLogo3"
                        app:layout_constraintTop_toTopOf="@+id/imageViewWhatAppLogo3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewMessage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/_1_new_message_now"
                        android:textColor="@color/text_description_color2"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewWhatAppLogo3"
                        app:layout_constraintStart_toEndOf="@+id/textViewChat3"
                        app:layout_constraintTop_toTopOf="@+id/imageViewWhatAppLogo3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewUserName3"
                        android:layout_width="wrap_content"

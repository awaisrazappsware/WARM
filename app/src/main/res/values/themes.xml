<resources>
    <!-- Base application theme. -->
    <style name="Theme.WMR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_title</item>
        <item name="colorPrimaryVariant">@color/color_title</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/whatsapp_business</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/white</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

<!--    <style name="RatingBar" parent="Theme.AppCompat">-->
<!--        <item name="colorControlNormal">#99000000</item>-->
<!--        <item name="colorControlActivated">@color/whatsapp_business</item>-->
<!--    </style>-->

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

</resources>